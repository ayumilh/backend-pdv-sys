{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./src",  // Isso define a raiz do seu projeto como a pasta src
    "paths": {
      "@/*": ["*"]  // Isso define o alias '@' para apontar para qualquer coisa dentro da pasta src
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src", "prisma"]
}
